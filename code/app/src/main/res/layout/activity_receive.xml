<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.HandOverActivity">

    <TextView
        android:id="@+id/receive_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/accepted_request"
        android:textColor="@color/colorPurpleTitle"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/receive_textview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/receive_textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/placeholder"
                android:textColor="@color/colorBlueMessage"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/book_picture_imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/add_book_picture"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_custom_image" />

            <TextView
                android:id="@+id/receive_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/placeholder"
                android:textColor="@color/colorDarkBgd"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receive_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/placeholder"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receive_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/fanwood_text"
                android:text="@string/placeholder"
                android:textColor="@android:color/darker_gray"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/receive_see_location"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/see_location"
                android:textColor="@color/colorBlueMessage"
                android:background="@drawable/border"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/receive_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/scan_book"
                    android:src="@drawable/ic_camera_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/or"
                    android:textColor="@color/colorDarkBgd"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/receive_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/receive"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/colorBlueMessage"
                    android:background="@drawable/border" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>