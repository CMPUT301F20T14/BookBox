rules_version = '2';
// https://stackoverflow.com/questions/49919641/firestore-rules-for-document-field
// https://stackoverflow.com/questions/56400224/how-to-set-firebase-cloud-firestore-security-rules-with-firebase-authentication
service cloud.firestore {
  match /databases/{database}/documents {
    match /USERS/{userid} {
    	allow get, create: if true;
    }
    match /USERS/{userID=**} {
    	allow read, write: if request.auth.uid == resource.data.EMAIL;
    }
    match /REQUESTS/{RequestID} {
    	allow create: if request.auth.uid == request.resource.data.BORROWER;
      allow delete: if request.auth.uid == resource.data.OWNER;
    }
    match /BOOOKS/{BookID} {
    // https://stackoverflow.com/questions/49671227/allow-update-on-single-field-in-firestore
			allow update: if request.auth != null 
      && request.resource.data.diff(resource.data).changedKeys().hasOnly(["STATUS"]);
    	allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.OWNER;
    }
  }
}